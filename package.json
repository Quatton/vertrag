{
  "name": "vertrag-axum",
  "type": "module",
  "workspaces": [
    "app",
    "contract"
  ],
  "scripts": {
    "dev": "bun run --filter=@vertrag/app dev",
    "start": "bun run --filter=@vertrag/app start",
    "build": "bun run --filter=@vertrag/app build",
    "serve": "bun run --filter=@vertrag/app serve",
    "format": "bun run --filter=@vertrag/* format ",
    "lint": "bun run --filter=@vertrag/* lint",
    "lint:fix": "bun run --filter=@vertrag/* lint:fix",
    "lint:unsafe": "bun run  --filter=@vertrag/* lint:unsafe",
    "gen:openapi": "bun run --filter=@vertrag/contract gen",
    "gen:server": "bun run gen:openapi && openapi-generator generate -i ./contract/openapi.json -g rust-axum -o ./backend/gen"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@biomejs/biome": "^1.9.4"
  },
  "peerDependencies": {
    "typescript": "^5.0.0"
  }
}